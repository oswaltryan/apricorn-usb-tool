ALL ALL=(ALL) NOPASSWD :/usr/sbin/fdisk -l /dev/sde
ALL ALL=(ALL) NOPASSWD :/usr/sbin/fdisk -l /dev/sdf
ALL ALL=(ALL) NOPASSWD :/usr/sbin/fdisk -l /dev/sdg
ALL ALL=(ALL) NOPASSWD :/usr/sbin/fdisk -l /dev/sdh
ALL ALL=(ALL) NOPASSWD :/usr/sbin/fdisk -l /dev/sdi
ALL ALL=(ALL) NOPASSWD :/usr/sbin/fdisk -l /dev/sdj
ALL ALL=(ALL) NOPASSWD :/usr/sbin/fdisk -l /dev/sdk
ALL ALL=(ALL) NOPASSWD :/usr/sbin/fdisk -l /dev/sdl
ALL ALL=(ALL) NOPASSWD :/usr/sbin/fdisk -l /dev/sdm
